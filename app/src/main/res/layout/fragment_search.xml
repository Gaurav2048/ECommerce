<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Fragments.SearchFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:fontFamily="@font/playfairdisplaybold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:textColor="#000"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/cart_button"
        android:textSize="25sp"
        android:id="@+id/app_name"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/apply_filter"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_filter"

        />
    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="Filters"
        android:textColor="#fff"
        android:gravity="center"
        android:background="#000"
        android:layout_below="@+id/apply_filter"
        android:layout_alignParentRight="true"
        android:textSize="8sp"
        android:padding="3dp"
        android:layout_marginRight="20dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_marginLeft="20dp"
        android:textColor="#000"
        android:text="Search"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/playfairdisplayregular"
        android:textScaleX="1.2"
        android:id="@+id/description"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/searchWidget"
        android:layout_marginTop="20dp"
        android:drawableLeft="@mipmap/ic_serach"
        android:layout_below="@+id/description"
        android:hint="Search by product name "
        android:gravity="center_vertical|left"
        android:drawablePadding="2dp"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:textCursorDrawable="@drawable/search_cursor"
        android:textSize="16sp"
        android:elevation="1dp"
        android:background="#fff"
        android:textColorHint="#C3828D9D"
        android:fontFamily="@font/playfairdisplayblack"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:id="@+id/removeSearchText"
        android:layout_below="@+id/description"
        android:layout_marginTop="30dp"
        android:elevation="1dp"
        android:background="#fff"
        android:src="@mipmap/ic_cross_cov"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchWidget"
        android:layout_marginTop="10dp"
        android:id="@+id/search_container"
        android:background="@color/no_color"
        />


</RelativeLayout>