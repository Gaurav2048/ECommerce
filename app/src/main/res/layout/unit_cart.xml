<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="3dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">
    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F54739">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="@dimen/ic_delete"
            android:layout_height="@dimen/ic_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padd_10"
            android:src="@mipmap/ic_delete_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padd_10"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="Remove"
            android:fontFamily="@font/playfairdisplayregular"
            android:textColor="#fff"
            android:textSize="13dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:id="@+id/view_foreground"

        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apple Smart watch series 1 42 mili 42 MM "
        android:textColor="#000"
        android:fontFamily="@font/playfairdisplayregular"
        android:layout_toLeftOf="@+id/product_cart_image"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:id="@+id/name_product"
        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/product_cart_image"
        android:background="#cbcbcb"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/product_cart_image"
            android:layout_marginTop="5dp"
            android:spinnerMode="dialog"
            android:id="@+id/spinner"
            android:visibility="gone"
            android:entries="@array/shoes"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:text="$ 300"
            android:alpha="0.7"
            android:layout_below="@+id/name_product"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/price_text_color"
            android:textSize="19sp"
            android:fontFamily="@font/domineregular"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price_on_discount"
            android:text="$ 300"
            android:layout_below="@+id/name_product"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/price"
            android:textColor="@color/mellon_rd"
            android:textSize="19sp"
            android:fontFamily="@font/domineregular"

            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivered by 4 th June, 19"
            android:textColor="#000"
            android:fontFamily="@font/playfairdisplayregular"
            android:layout_below="@+id/price"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/delivered"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#cbcbcb"
            android:layout_above="@+id/adtions"
            android:layout_marginTop="10dp"
            android:id="@+id/line2"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/adtions"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:id="@+id/save_for_later"
                android:text="Save for later"
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:fontFamily="@font/playfairdisplayregular"
                android:drawableLeft="@mipmap/ic_save_later"
                />
            <ImageView
                android:layout_width="2px"
                android:layout_height="44dp"
                android:background="#cbcbcb"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:id="@+id/remove"
                android:layout_weight="1"
                android:text="Remove"
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:fontFamily="@font/playfairdisplayregular"
                android:drawableLeft="@mipmap/ic_delete"

                />
        </LinearLayout>

    </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>