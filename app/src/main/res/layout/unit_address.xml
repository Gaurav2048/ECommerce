<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:elevation="3dp"
    android:background="#fff"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gunjan Kalita"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/playfairdisplayregular"
        android:layout_marginLeft="20dp"
        android:maxLines="1"
        android:id="@+id/name_co"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:text="House number 13, SSB Guest House , Rupkuwor Path, Bongaon, Bharat Petrolium, Guwahati, \n Assam - 781024"
        android:textColor="#BF000000"
        android:layout_below="@+id/name_co"
        android:textSize="12sp"
        android:fontFamily="@font/playfairdisplayregular"
        android:gravity="left"
        android:id="@+id/address_detail"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="7896411509"
        android:textColor="#F0000000"
        android:layout_below="@+id/address_detail"
        android:fontFamily="@font/domineregular"
        android:layout_marginBottom="15dp"

        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dots"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"

        />
</RelativeLayout>