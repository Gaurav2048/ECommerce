<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialog_back"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingTop="25dp"
    android:paddingBottom="25dp"
    android:layout_height="110dp">

    <ProgressBar
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="#00FFFFFF"
        android:id="@+id/progressDialog"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/white"
        android:layout_marginLeft="20dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/progressDialog"
        android:layout_marginLeft="10dp"
        android:text="Hi Gunjan"
        android:textColor="#fff"
        android:fontFamily="@font/dominebold"
        android:textSize="15sp"
        android:id="@+id/name"

        />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/progressDialog"
        android:fontFamily="@font/domineregular"
        android:text="Please wait while we are \nconfiguring things for you... "
        android:textColor="#fff"

        android:textScaleX="1.1" />





</RelativeLayout>