<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:paddingBottom="10dp"
    android:background="#fff"
    >
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/image_view"
        >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/search_image_back"
        android:id="@+id/search_img"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"

        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:paddingRight="12dp"
            android:id="@+id/discount_view"
            android:background="@color/shimmer"
            android:layout_marginLeft="-1.7dp"
            android:layout_marginTop="-1.7dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="24dp"
                android:textSize="18sp"
                android:textColor="#fff"
                android:fontFamily="@font/domineregular"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="30dp"
                android:textColor="#fff"
                android:fontFamily="@font/domineregular"


                />

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="14dp"
        android:background="#838383"
        android:scaleType="fitStart"
        android:layout_marginTop="70dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_toRightOf="@+id/image_view"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@color/shimmer_gray"
        android:maxLines="2"
        android:textColor="#000"
        android:textAllCaps="true"
        android:fontFamily="@font/dominebold"
        android:textSize="20sp"
        android:id="@+id/product_name"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:maxLines="1"
        android:background="@color/shimmer_gray"
        android:layout_toRightOf="@+id/image_view"
        android:layout_marginLeft="5dp"
        android:minWidth="70dp"
        android:textSize="14sp"
        android:fontFamily="@font/dominebold"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/product_name"
        android:layout_marginTop="6dp"
        android:textAllCaps="true"
        android:id="@+id/current_price"
        android:textColor="@color/price_text_color"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/product_name"
        android:layout_toRightOf="@+id/current_price"
        android:layout_marginLeft="4dp"
        android:minWidth="30dp"
        android:background="@color/shimmer_gray"
        android:textSize="14sp"
        android:fontFamily="@font/dominebold"
        android:layout_marginTop="6dp"
        android:textColor="@color/price_text_color"



        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_toRightOf="@+id/image_view"
        android:layout_below="@+id/current_price"
        android:layout_marginLeft="5dp"
        android:background="@color/shimmer_gray"
        android:minWidth="60dp"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:fontFamily="@font/dominebold"
        android:textColor="@color/tab_background_selected"

        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/upvote_button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="60dp"
        android:background="@color/shimmer_gray"
        android:padding="7dp"

        />

</RelativeLayout>